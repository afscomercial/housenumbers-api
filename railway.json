{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "args": {
      "HF_TOKEN": "${{HF_TOKEN}}" 
    }
  },
  "deploy": {
    "startCommand": "node dist/index.js",
    "healthcheckPath": "/health",
    "memoryLimit": 8192,
    "cpuLimit": 8000
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "MODEL_CONTEXT_SIZE": "2048",
        "MODEL_GPU_LAYERS": "0",
        "JWT_EXPIRES_IN": "24h"
      }
    }
  }
}
